La estructura
public class classe
{
    public void metedoNoSincronitzat
    {
        parte del codigo NO sincronizado

        synchronized(this)      // si deseamos bloquear el objeto que invoca el metodo
        {
            codigo sincronizado
        }

        parte NO sincronizado
    }

    public void metedoNoSincronitzat
    {
        parte del codigo NO sincronizado

        synchronized(altreObjecte)      // codigo sincronizado
        {
            codigo sincronizado
        }

        parte NO sincronizado
    }
}

